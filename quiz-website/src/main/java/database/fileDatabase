-- permission:
-- số 0 là admin
-- số 1 là giảng viên
-- số 2 là học viên

SELECT * FROM users WHERE permission = 0;
SELECT * FROM users WHERE permission = 1;
SELECT * FROM users WHERE permission = 2;

alter table users
add column status enum('status', 'pending') after permission;

create table category(
id int auto_increment primary key,
nameCategory varchar(100) UNIQUE,
describes varchar(100)
);