create database pik_quiz;
use pik_quiz;
create table users (
id int auto_increment primary key,
name varchar(90),
email varchar(50) not null,
password varchar(50) not null,
permission int not null,
    UNIQUE (name),
    UNIQUE (email)
);

INSERT INTO users (name, email, password, permission) VALUES ('admin', 'administrator@gmail.com', 'admin01', 0);
